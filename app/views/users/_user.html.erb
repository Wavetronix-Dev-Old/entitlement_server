<div class="row">
  <div class="medium-3 columns">
    <%= user.email %>
  </div>
  <div class="medium-4 columns">
    <%= user.location %> <br/>
    <%= user.description %>
  </div>
  <div class="medium-2 columns">
    <% user.roles.each do |role| %>
      <span class="secondary label radius">
        <%= role.name %>
      </span>
    <% end %>
  </div>

  <div class="medium-3 columns text-right">
    <ul class="button-group radius">
      <li>
        <%= link_to edit_user_path(user), class: 'button tiny', title: %(Edit "#{user.name}") do %>
          <span class="fa fa-edit"></span>
          Edit
        <% end %>
      </li>
      <li>
        <%= link_to user_path(user), class: "button tiny delete", data: { confirm: %(Are you sure you want to delete "#{user.name}?" This cannot be undone.) }, method: :delete, title: %(Delete "#{user.name}") do %>
          <span class="fa fa-trash-o"></span>
          Delete
        <% end %>
      </li>
    </ul>
  </div>
</div>
