<div class="row">
  <div class="small-8 columns">
    <div class="row">
      <div class="small-12 medium-6 columns">
        <strong><%= user.name %></strong>
      </div>
      <div class="small-12 medium-6 columns">
        <%= user.email %>
      </div>
    </div>
  </div>
  <div class="small-4 columns text-right">
    <ul class="button-group radius">
      <li>
        <%= link_to edit_identity_path(user.uid), class: 'button tiny', title: %(Edit "#{user.name}") do %>
          <span class="fa fa-edit"></span>
          Edit
        <% end %>
      </li>
      <li>
        <%= link_to user_path(user), class: "button tiny delete", data: { confirm: %(Are you sure you want to delete "#{user.name}?" This cannot be undone.) }, method: :delete, title: %(Delete "#{user.name}") do %>
          <span class="fa fa-trash-o"></span>
          Delete
        <% end %>
      </li>
    </ul>
  </div>
</div>
