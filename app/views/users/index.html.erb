<% content_for :title, "Users" %>

<h1>
  Users
  <small>
    <%= link_to new_identity_path, title: "Create a new user" do %>
    <span class="fa fa-plus-square-o"></span>
  <% end %>
  </small>
</h1>

<table width="100%">
  <thead>
    <tr>
      <th width="25"></th>
      <th>Name</th>
      <th>Email</th>
      <th>Company</th>
      <th>Job Title</th>
      <th>Role</th>
      <th width="25"></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<hr/>
<h4>identities</h4>
<% @identities.each do |i| %>
  <p><%= i.id %> - <%= i.first_name %> <%= i.last_name %> | <%= i.company %> | <%= i.job_title %></p>
<% end %>
