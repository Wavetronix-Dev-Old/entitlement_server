<% content_for :title, "User Account Required" %>
<h1>User Account Required</h1>

<section class="panel radius">
  <div class="row">
    <div class="medium-6 columns">
      <h2>Sign in</h2>
      <%= form_tag "/auth/identity/callback" do %>
        <%= label_tag :auth_key, "Email" %>
        <%= email_field_tag :auth_key %>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <%= submit_tag "Login", class: "button radius" %>
      <% end %>
    <%= link_to "Forget your password?", new_identities_password_reset_path %>
    </div>
    <div class="medium-6 columns">
      <h2>Don't have an account?</h2>
      <p>
        To access certain features of wavetronix.com, you will need an account.
        If you do not have one, you can
        <%= link_to "create one here", new_identity_path %>. It is fast, simple,
        and free of charge.
      </p>
    </div>
  </div>
</section>
